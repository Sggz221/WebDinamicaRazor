@page "{id:long}"
@model RazorPages.Pages.EditModel
@{
    ViewData["Title"] = "Editar Funko";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Funko</h3>
                </div>
                <div class="card-body">
                    
                    <form method="post" enctype="multipart/form-data">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Funko.Image" />

                        <div class="text-center mb-4 p-3 bg-light rounded border">
                            <label class="form-label fw-bold d-block text-muted small">Imagen Actual</label>
                            <img src="/uploads/@Model.Funko.Image" 
                                 alt="Imagen actual" 
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 150px;"
                                 onerror="this.onerror=null; this.src='/uploads/default.png'">
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Funko.Nombre" class="form-label fw-bold">Nombre</label>
                                <input asp-for="Funko.Nombre" class="form-control" />
                                <span asp-validation-for="Funko.Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Funko.Precio" class="form-label fw-bold">Precio (€)</label>
                                <div class="input-group">
                                    <input asp-for="Funko.Precio" type="number" step="0.01" class="form-control" />
                                    <span class="input-group-text">€</span>
                                </div>
                                <span asp-validation-for="Funko.Precio" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Funko.Categoria" class="form-label fw-bold">Categoría</label>
                                <select asp-for="Funko.Categoria" asp-items="Model.Categories" class="form-select">
                                    <option value="">-- Selecciona una categoría --</option>
                                </select>
                                <span asp-validation-for="Funko.Categoria" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Cambiar Imagen (Opcional)</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <div class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Sube un archivo solo si deseas reemplazar la imagen de arriba.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}