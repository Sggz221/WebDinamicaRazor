@page
@model RazorPages.Pages.CreateModel
@{
    ViewData["Title"] = "Nuevo Funko";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Crear Nuevo Funko</h3>
                </div>
                <div class="card-body">
                    
                    <form method="post" enctype="multipart/form-data">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Funko.Nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Funko.Nombre" class="form-control" placeholder="Ej: Batman 85th Anniversary" />
                            <span asp-validation-for="Funko.Nombre" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Funko.Precio" class="form-label fw-bold">Precio (€)</label>
                                <div class="input-group">
                                    <input asp-for="Funko.Precio" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text">€</span>
                                </div>
                                <span asp-validation-for="Funko.Precio" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Funko.Categoria" class="form-label fw-bold">Categoría</label>
                                <select asp-for="Funko.Categoria" asp-items="Model.Categories" class="form-select">
                                    <option value="">-- Selecciona una categoría --</option>
                                </select>
                                <span asp-validation-for="Funko.Categoria" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Imagen del Producto</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <div class="form-text">Formatos permitidos: .jpg, .png, .jpeg</div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save"></i> Guardar Funko
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

