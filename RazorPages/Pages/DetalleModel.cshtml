@page "{id:long}"
@model RazorPages.Pages.DetalleModel
@{
    ViewData["Title"] = "Detalle del Funko";
}

<div class="container mt-5">
    <div class="mb-4">
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="/uploads/@Model.Funko.Image" 
                     class="img-fluid rounded shadow-sm" 
                     alt="@Model.Funko.Nombre"
                     style="max-height: 400px; width: auto;"
                     onerror="this.onerror=null; this.src='/uploads/default.png'">
            </div>
            
            <div class="col-md-7">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="badge bg-primary fs-6">@Model.Funko.Categoria</span>
                        <small class="text-muted">ID: @Model.Funko.Id</small>
                    </div>

                    <h1 class="card-title display-5 fw-bold mb-3">@Model.Funko.Nombre</h1>
                    
                    <h2 class="text-success fw-bold mb-4">
                        @Model.Funko.Precio.ToString("C")
                    </h2>

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a asp-page="/Edit" asp-route-id="@Model.Funko.Id" class="btn btn-primary btn-lg px-4">
                            Editar
                        </a>
                        
                        <form asp-page="Index" asp-page-handler="Delete" asp-route-id="@Model.Funko.Id" method="post" 
                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar este Funko permanentemente?');">
                            <button type="submit" class="btn btn-outline-danger btn-lg px-4">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>