@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            
            <div class="mb-4 text-danger">
                @if (Model.ErrorCode == 404)
                {
                    <i class="bi bi-search" style="font-size: 4rem;"></i>
                }
                else
                {
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
                }
            </div>

            <h1 class="display-4 fw-bold text-danger">@Model.ErrorTitle</h1>
            
            @if (Model.ErrorCode > 0)
            {
                <span class="badge bg-secondary mb-3">Código de error: @Model.ErrorCode</span>
            }

            <p class="lead text-muted mb-4">
                @Model.ErrorMessage
            </p>

            <div class="d-grid gap-2 col-8 mx-auto">
                <a asp-page="/Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-door-fill"></i> Volver al Catálogo
                </a>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="mt-4 pt-3 border-top text-muted small">
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                </div>
            }
        </div>
    </div>
</div>